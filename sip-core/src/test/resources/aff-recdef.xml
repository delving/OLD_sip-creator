<?xml version="1.0"?>
<record-definition prefix="delving">
    <namespaces>
        <namespace prefix="delving" uri="" schema="http://www.delving/eu"/>
    </namespaces>

    <root>

        <elem tag="admin">
            <elem tag="owner_uri"/>
            <elem tag="owner_name"/>
            <elem tag="provider_uri"/>
            <elem tag="provider_name"/>
            <elem tag="rights"/>
        </elem>

        <elem tag="thing" >
            <elem tag="thing_type"/>
            <elem tag="local_id"/>
            <elem tag="uri"/>
            <elem tag="title"/>
            <elem tag="description"/>
            <elem tag="measurement"/>
            <elem tag="language"/>
            <elem tag="date_created"/>
            <elem tag="collection_uri"/>
            <elem tag="collection_name"/>
            <elem tag="landing_Page"/>
        </elem>

        <elem tag="media" >
            <elem tag="thumbnail_uri"/>
            <elem tag="full_view_uri"/>
            <elem tag="deep_zoom_uri"/>
        </elem>

        <elem tag="actors">
            <elem tag="actor" repeatable="true">
                <elem tag="actor_role"/>
                <elem tag="actor_uri"/>
                <elem tag="actor_source"/>
                <elem tag="date"/>
                <elem tag="first_name"/>
                <elem tag="last_name"/>
            </elem>
        </elem>

        <elem tag="places">
            <elem tag="place" repeatable="true">
                <elem tag="place_role"/>
                <elem tag="place_uri"/>
                <elem tag="place_source"/>
                <elem tag="place_date"/>
                <elem tag="place_name"/>
            </elem>
        </elem>

        <elem tag="types" repeatable="true">
            <elem tag="type">
                <elem tag="type_category"/>
                <elem tag="type_uri"/>
                <elem tag="type_source"/>
                <elem tag="type_name"/>
            </elem>
        </elem>

        <elem tag="events" repeatable="true">
            <elem tag="event">
                <elem tag="event_type"/>
                <elem tag="event_role"/>
                <elem tag="event_uri"/>
                <elem tag="event_source"/>
                <elem tag="event_name"/>
            </elem>
        </elem>

        <elem tag="custom">

            <!-- if needed, specific for each hub -->
        </elem>

    </root>

    <options> <!-- keys should be uri's -->
        <option-list path="/delving/actors/actor/actor_role">
            <opt key="1">Crator</opt>
            <opt key="2">Artist</opt>
            <opt key="3">Photographer</opt>
            <opt key="3">etc</opt>
        </option-list>
        <option-list path="/delving/places/place/place_role">
            <opt key="1">actor_birth_place</opt>
            <opt key="2">actor_death_place</opt>
            <opt key="3">creation</opt>
            <opt key="4">etc CRM</opt>
        </option-list>
        <option-list path="/delving/types/type/type_category">
            <opt key="1">classification</opt>
            <opt key="2">subject</opt>
            <opt key="3">technique</opt>
            <opt key="4">material</opt>
            <opt key="5">colour</opt>
            <opt key="6">etc</opt>
        </option-list>
    </options>

</record-definition>