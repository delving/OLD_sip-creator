<?xml version="1.0"?>
<record-definition prefix="aff">

    <!--todo: summary fields are not accounted for yet-->

    <namespaces>
        <namespace prefix="aff" uri="http://www.delving.eu/aff" schema="http://www.delving.eu/aff_1.0.xsd"/>
    </namespaces>

    <elems>
        <elem tag="type"/>
        <elem tag="role"/>
        <elem tag="uri"/>
        <elem tag="date"/>
        <elem tag="source"/>
        <elem tag="name"/>
    </elems>

    <root tag="aff">

        <elem tag="admin">
            <elem tag="owner_uri"/>
            <elem tag="owner_name"/>
            <elem tag="provider_uri"/>
            <elem tag="provider_name"/>
            <elem tag="rights"/>
        </elem>

        <elem tag="thing" elems="type, uri" singular="true">
            <elem tag="local_id"/>
            <elem tag="title"/>
            <elem tag="description"/>
            <elem tag="measurement"/>
            <elem tag="language"/>
            <elem tag="date_created"/>
            <elem tag="collection_uri"/>
            <elem tag="collection_name"/>
            <elem tag="landing_Page"/>
        </elem>

        <!--todo: there may be multiple uris, is this the ideal way to represent that?-->
        <!--todo: mime type option?-->
        <elem tag="media">
            <elem tag="thumbnail_uri"/>
            <elem tag="full_view_uri"/>
            <elem tag="deep_zoom_uri"/>
        </elem>

        <elem tag="actors" singular="true">
            <elem tag="actor" elems="role, uri, source, date">
                <elem tag="first_name"/>
                <elem tag="last_name"/>
            </elem>
        </elem>

        <elem tag="places" singular="true">
            <elem tag="place" elems="role, uri, source, date, name">
                <!--todo: some coordinates?  lat/long?-->
            </elem>
        </elem>

        <elem tag="types" singular="true">
            <elem tag="type" elems="uri, source, name">
                <elem tag="category"/>
            </elem>
        </elem>

        <elem tag="events" singular="true">
            <elem tag="event" elems="type, role, uri, source, name">
            </elem>
        </elem>

    </root>

    <!--<facts>-->
        <!--<fact path="/aff/admin/owner_uri" name="mets:"/>-->
        <!--<fact path="/aff/admin/owner_name" name="mets:"/>-->
        <!--<fact path="/aff/admin/provider_uri" name="mets:"/>-->
        <!--<fact path="/aff/admin/provider_name" name="mets:"/>-->
        <!--<fact path="/aff/admin/rights" name="mets:"/>-->
        <!--<fact path="/aff/thing/language" name="mets:"/>-->
    <!--</facts>-->

    <options> <!-- keys should be uri's -->
        <option-list path="/aff/actors/actor/role">
            <opt key="1">Creator</opt>
            <opt key="2">Artist</opt>
            <opt key="3">Photographer</opt>
            <!--todo: more values-->
        </option-list>
        <option-list path="/aff/places/place/role">
            <opt key="1">Actors place of birth</opt>
            <opt key="2">Actor place of death</opt>
            <opt key="3">Production place</opt>
            <!--todo: more values-->
        </option-list>
        <option-list path="/aff/types/type/category">
            <opt key="1">Classification</opt>
            <opt key="2">Subject</opt>
            <opt key="3">Technique</opt>
            <opt key="4">Material</opt>
            <opt key="5">Colour</opt>
            <!--todo: more values-->
        </option-list>
    </options>

    <docs/>
    <bookmarks/>

</record-definition>